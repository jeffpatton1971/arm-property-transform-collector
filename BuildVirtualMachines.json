{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachine": {
      "type": "object"
    },
    "Password": {
      "type": "securestring"
    },
    "BuildUri": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "path": {
      "type": "string"
    },
    "version": {
      "type": "string"
    }
  },
  "variables": {
    "collectorTemplateUri": "[concat(parameters('url'),'/',parameters('path'),'/',parameters('version'),'/collector.json')]",
    "computeUri": "[concat(parameters('BuildUri'),'/compute-virtualMachines/build/')]",
    "disksUri": "[concat(parameters('BuildUri'),'/compute-disks/build/')]",
    "nicUri": "[concat(parameters('BuildUri'),'/network-networkInterfaces/build/')]",
    "avsetUri": "[concat(parameters('BuildUri'),'/compute-availabilitySets/build/')]",
    "Disk": {
      "p4": {
        "size": 32,
        "sku": "Premium_LRS"
      },
      "p6": {
        "size": 64,
        "sku": "Premium_LRS"
      },
      "p10": {
        "size": 128,
        "sku": "Premium_LRS"
      },
      "p15": {
        "size": 256,
        "sku": "Premium_LRS"
      },
      "p20": {
        "size": 512,
        "sku": "Premium_LRS"
      },
      "p30": {
        "size": 1023,
        "sku": "Premium_LRS"
      },
      "p40": {
        "size": 2047,
        "sku": "Premium_LRS"
      },
      "p50": {
        "size": 4095,
        "sku": "Premium_LRS"
      },
      "s4": {
        "size": 32,
        "sku": "Standard_LRS"
      },
      "s6": {
        "size": 64,
        "sku": "Standard_LRS"
      },
      "s10": {
        "size": 128,
        "sku": "Standard_LRS"
      },
      "s15": {
        "size": 256,
        "sku": "Standard_LRS"
      },
      "s20": {
        "size": 512,
        "sku": "Standard_LRS"
      },
      "s30": {
        "size": 1023,
        "sku": "Standard_LRS"
      },
      "s40": {
        "size": 2047,
        "sku": "Standard_LRS"
      },
      "s50": {
        "size": 4095,
        "sku": "Standard_LRS"
      }
    },
    "OS": {
      "Windows Server 2012 R2": {
        "imagePublisher": "MicrosoftWindowsServer",
        "imageOffer": "WindowsServer",
        "imageSKU": "2012-R2-Datacenter",
        "version": "latest",
        "type": "windows"
      },
      "Windows Server 2016 DataCenter": {
        "imagePublisher": "MicrosoftWindowsServer",
        "imageOffer": "WindowsServer",
        "imageSKU": "2016-Datacenter",
        "version": "latest",
        "type": "windows"
      },
      "CentOS 6.8 Latest": {
        "imagePublisher": "OpenLogic",
        "imageOffer": "CentOS",
        "imageSKU": "6.8",
        "version": "latest",
        "type": "linux"
      },
      "RedHat 6.8 Latest": {
        "imagePublisher": "RedHat",
        "imageOffer": "RHEL",
        "imageSKU": "6.8",
        "version": "latest",
        "type": "linux"
      }
    },
    "regions": {
      "southcentralus": {
        "location": "southcentralus",
        "abbreviation": "scu",
        "timezone": "Central Standard Time"
      },
      "eastus": {
        "location": "eastus",
        "abbreviation": "eus",
        "timezone": "Eastern Standard Time"
      },
      "eastus2": {
        "location": "eastus2",
        "abbreviation": "eus",
        "timezone": "Eastern Standard Time"
      },
      "westus": {
        "location": "westus",
        "abbreviation": "wus",
        "timezone": "Pacific Standard Time"
      },
      "westus2": {
        "location": "westus2",
        "abbreviation": "wus",
        "timezone": "Pacific Standard Time"
      }
    },
    "vmSize": "[concat('Standard_',parameters('virtualMachine').vmSize)]",
    "netArray": "[split(parameters('virtualMachine').subnet,',')]",
    "vnetID": "[resourceId(variables('netArray')[0],'Microsoft.Network/virtualNetworks',variables('netArray')[1])]",
    "subnetId": "[concat(variables('vnetID'),'/subnets/',variables('netArray')[2])]",
    "AdminUsername": "rack-adm",
    "AdminPassword": "[parameters('Password')]",
    "empty": {
      "array": [],
      "object": {}
    }
  },
  "resources": [
    {
      "condition": "[greater(length(parameters('virtualMachine').dataDisks), 0)]",
      "apiVersion": "2017-05-10",
      "name": "DataDiskReferenceCollector",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('collectorTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "source": {
            "value": "[parameters('virtualMachine').dataDisks]"
          },
          "transformTemplateUri": {
            "value": "[concat(parameters('url'),'/',parameters('path'),'/',parameters('version'),'/transform-dataDisksReference.json')]"
          },
          "BuildUri": {
            "value": "[variables('computeUri')]"
          }
        }
      }
    },
    {
      "condition": "[greater(length(parameters('virtualMachine').dataDisks), 0)]",
      "apiVersion": "2017-05-10",
      "name": "DataDiskCollector",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','DataDiskReferenceCollector')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('collectorTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "source": {
            "value": "[parameters('virtualMachine').dataDisks]"
          },
          "transformTemplateUri": {
            "value": "[concat(parameters('url'),'/',parameters('path'),'/',parameters('version'),'/transform-dataDisks.json')]"
          },
          "BuildUri": {
            "value": "[variables('disksUri')]"
          },
          "DependsOn": {
            "value": []
          }
        }
      }
    },
    {
      "condition": "[greater(length(parameters('virtualMachine').dataDisks), 0)]",
      "apiVersion": "2017-05-10",
      "name": "DataDiskNameArray",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [ "[concat('Microsoft.Resources/deployments/','DataDiskCollector')]" ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('collectorTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "source": {
            "value": "[parameters('virtualMachine').dataDisks]"
          },
          "transformTemplateUri": {
            "value": "[concat(parameters('url'),'/',parameters('path'),'/',parameters('version'),'/transform-stringarray.json')]"
          },
          "BuildUri": {
            "value": "[variables('disksUri')]"
          },
          "DependsOn": {
            "value": "[createArray(parameters('virtualMachine').osDisk.name)]"
          }
        }
      }
    },
    {
      "name": "BuildOsDiskReference",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'), '/osDisk.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('virtualMachine').osDisk.name]"
          },
          "caching": {
            "value": "ReadOnly"
          },
          "createOption": {
            "value": "FromImage"
          },
          "ManagedDiskId": {
            "value": "[resourceId(resourceGroup().name,'Microsoft.Compute/disks',parameters('virtualMachine').osDisk.name)]"
          }
        }
      }
    },
    {
      "name": "BuildImageReference",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'),'/imageReference.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "id": {
            "value": "[parameters('virtualMachine').imageReferenceId]"
          },
          "publisher": {
            "value": "[concat(variables('OS')[parameters('virtualMachine').operatingSystem].imagePublisher)]"
          },
          "offer": {
            "value": "[concat(variables('OS')[parameters('virtualMachine').operatingSystem].imageOffer)]"
          },
          "sku": {
            "value": "[concat(variables('OS')[parameters('virtualMachine').operatingSystem].imageSku)]"
          },
          "version": {
            "value": "[concat(variables('OS')[parameters('virtualMachine').operatingSystem].version)]"
          }
        }
      }
    },
    {
      "name": "BuildStorageProfile",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','BuildImageReference')]",
        "[concat('Microsoft.Resources/deployments/','BuildOsDiskReference')]",
        "[concat('Microsoft.Resources/deployments/','DataDiskReferenceCollector')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'),'/storageProfile.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "imageReference": {
            "value": "[reference('BuildImageReference').outputs.imageReference.value]"
          },
          "osDisk": {
            "value": "[reference('BuildOsDiskReference').outputs.osDisk.value]"
          },
          "dataDisks": {
            "value": "[if(greater(length(parameters('virtualMachine').dataDisks), 0),reference('DataDiskReferenceCollector').outputs.result.value,variables('empty').array)]"
          }
        }
      }
    },
    {
      "name": "DefineWindowsConfiguration",
      "type": "Microsoft.Resources/deployments",
      "condition": "[equals(variables('OS')[parameters('virtualMachine').operatingSystem].type,'windows')]",
      "apiVersion": "2017-05-10",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'),'/windowsConfiguration.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "provisionVMAgent": {
            "value": true
          },
          "winRM": {
            "value": {}
          },
          "additionalUnattendContent": {
            "value": {}
          },
          "enableAutomaticUpdates": {
            "value": true
          },
          "timeZone": {
            "value": "[variables('regions')[resourceGroup().location].timezone]"
          }
        }
      }
    },
    {
      "name": "DefineLinuxConfiguration",
      "type": "Microsoft.Resources/deployments",
      "condition": "[equals(variables('OS')[parameters('virtualMachine').operatingSystem].type,'linux')]",
      "apiVersion": "2017-05-10",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'),'/linuxConfiguration.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "disablePasswordAuthentication": {
            "value": false
          },
          "ssh": {
            "value": []
          }
        }
      }
    },
    {
      "name": "BuildOsProfile",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','BuildStorageProfile')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'),'/osProfile.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "computerName": {
            "value": "[parameters('virtualMachine').name]"
          },
          "adminUsername": {
            "value": "[variables('AdminUsername')]"
          },
          "adminPassword": {
            "value": "[variables('AdminPassword')]"
          },
          "customData": {
            "value": ""
          },
          "windowsConfiguration": {
            "value": "[if(equals(variables('OS')[parameters('virtualMachine').operatingSystem].type,'windows'),reference('DefineWindowsConfiguration').outputs.windowsConfiguration.value,variables('empty').object)]"
          },
          "linuxConfiguration": {
            "value": "[if(equals(variables('OS')[parameters('virtualMachine').operatingSystem].type,'linux'),reference('DefineLinuxConfiguration').outputs.linuxConfiguration.value,variables('empty').object)]"
          },
          "secrets": {
            "value": {}
          }
        }
      }
    },
    {
      "name": "BuildIpConfigurations",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('nicUri'),'/ipConfigurations.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "name": {
            "value": "[concat(parameters('virtualMachine').name,'-ipc')]"
          },
          "subnet": {
            "value": "[variables('subnetId')]"
          }
        }
      }
    },
    {
      "name": "BuildNetworkInterface",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','BuildIpConfigurations')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('nicUri'),'/networkInterfaces.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "name": {
            "value": "[concat(parameters('virtualMachine').name,'-nic')]"
          },
          "ipConfigurations": {
            "value": "[createarray(reference('BuildIpConfigurations').outputs.ipConfigurations.value)]"
          },
          "DependsOn": {
            "value": "[createArray(parameters('virtualMachine').availabilitySet)]"
          },
          "tags": {
            "value": {}
          }
        }
      }
    },
    {
      "name": "BuildNetworkInterfaceId",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','BuildNetworkInterface')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'),'/networkInterfaces.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "id": {
            "value": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(parameters('virtualMachine').name,'-nic'))]"
          },
          "primary": {
            "value": true
          }
        }
      }
    },
    {
      "name": "BuildNetworkProfile",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','BuildNetworkInterfaceId')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'),'/networkProfile.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "networkInterfaces": {
            "value": "[createarray(reference('BuildNetworkInterfaceId').outputs.networkInterfaces.value)]"
          }
        }
      }
    },
    {
      "name": "BuildAvailabilitySet",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('avsetUri'),'/availabilitySets.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('virtualMachine').availabilitySet]"
          },
          "skuName": {
            "value": "Aligned"
          },
          "tags": {
            "value": {}
          }
        }
      }
    },
    {
      "name": "BuildProperties",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','BuildAvailabilitySet')]",
        "[concat('Microsoft.Resources/deployments/','BuildNetworkProfile')]",
        "[concat('Microsoft.Resources/deployments/','BuildOsProfile')]",
        "[concat('Microsoft.Resources/deployments/','BuildStorageProfile')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'),'/properties.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "licenseType": {
            "value": ""
          },
          "availabilitySet": {
            "value": {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Compute/availabilitySets',parameters('virtualMachine').availabilitySet)]"
            }
          },
          "hardwareProfile": {
            "value": {
              "vmSize": "[variables('vmSize')]"
            }
          },
          "storageProfile": {
            "value": "[reference('BuildStorageProfile').outputs.storageProfile.value]"
          },
          "osProfile": {
            "value": "[reference('BuildOsProfile').outputs.osProfile.value]"
          },
          "networkProfile": {
            "value": "[reference('BuildNetworkProfile').outputs.networkProfile.value]"
          },
          "diagnosticsProfile": {
            "value": {}
          }
        }
      }
    },
    {
      "name": "BuildVirtualMachine",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','BuildProperties')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('computeUri'),'/virtualMachines.json')]",
          "contentVersion": "2017.09.01.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('virtualMachine').name]"
          },
          "DependsOn": {
            "value": "[if(greater(length(parameters('virtualMachine').dataDisks), 0),concat(reference('DataDiskNameArray').outputs.result.value,createArray(concat(parameters('virtualMachine').name,'-nic'))),createArray(concat(parameters('virtualMachine').name,'-nic')))]"
          },
          "tags": {
            "value": "[json('{\"TagName\": \"TagValue\"}')]"
          },
          "plan": {
            "value": {}
          },
          "properties": {
            "value": "[reference('BuildProperties').outputs.properties.value]"
          },
          "resources": {
            "value": []
          }
        }
      }
    }
  ],
  "outputs": {
    "armTemplate": {
      "type": "object",
      "value": {
        "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
        "contentVersion": "1.0.0.0",
        "parameters": {},
        "variables": {},
        "resources": "[if(greater(length(parameters('virtualMachine').dataDisks), 0),concat(createArray(reference('BuildAvailabilitySet').outputs.availabilitySets.value,reference('BuildNetworkInterface').outputs.networkInterfaces.value),reference('DataDiskCollector').outputs.result.value,createArray(reference('BuildVirtualMachine').outputs.virtualMachine.value)),concat(createArray(reference('BuildAvailabilitySet').outputs.availabilitySets.value,reference('BuildNetworkInterface').outputs.networkInterfaces.value),createArray(reference('BuildVirtualMachine').outputs.virtualMachine.value)))]",
        "outputs": {}
      }
    }
  }
}
